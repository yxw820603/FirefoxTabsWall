{
  "manifest_version": 2,
  "name": "MyTabsWall",
  "version": "1.0",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"  
  },
  "description": "A simple extension to demonstrate features.",
  "permissions": ["activeTab", "tabs", "storage", "scripting","<all_urls>"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Capture Tab"
  },
  "web_accessible_resources": ["capture.html"]
}
